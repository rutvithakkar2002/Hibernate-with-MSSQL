<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<!-- root tag -->

<hibernate-mapping>

	<class name="com.entity.UserEntity" table="users"><!-- Userentity is connect 
			to the users table -->
		<id name="userId" type="int"></id><!-- primary key -->
		<generator class="native"></generator>   <!-- native means let the hibernate decide that which is best for me so it 
			will take inbuilt -->

		<property name="userName" column="username"></property>   <!-- propertymeans column -->
		<property name="email" column="email"></property>
		<property name="password"></property>
		
	</class>


</hibernate-mapping>